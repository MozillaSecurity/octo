{
  "name": "@mozillasecurity/octo",
  "version": "2.0.0",
  "description": "A unified shared library which aids in building fuzzers for browsers or as complement for an existing fuzzing framework.",
  "keywords": [
    "fuzzing",
    "browser",
    "firefox",
    "random",
    "javascript",
    "node",
    "library"
  ],
  "homepage": "https://github.com/mozillasecurity/octo",
  "bugs": {
    "url": "https://github.com/mozillasecurity/octo/issues",
    "email": "cdiehl@mozilla.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mozillasecurity/octo.git"
  },
  "license": "MPL-2.0",
  "author": "Christoph Diehl <cdiehl@mozilla.com>",
  "main": "dist/octo.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "webpack -p",
    "coverage": "cross-env NODE_ENV=test jest --silent --coverage --collectCoverageFrom=lib/**/*.ts",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls",
    "docs": "esdoc",
    "lint": "cross-env NODE_ENV=test eslint ./lib --ext ts",
    "lint:fix": "cross-env NODE_ENV=test eslint ./lib --ext ts --fix",
    "prepare": "npm run build",
    "prepush": "npm run lint && npm test",
    "test": "jest --silent",
    "watch": "webpack --watch"
  },
  "dependencies": {
    "@types/html-entities": "^1.2.16",
    "@types/jsesc": "^2.5.0",
    "@types/mersenne-twister": "^1.1.2",
    "html-entities": "^1.2.1",
    "jsesc": "^2.5.1",
    "mersenne-twister": "^1.1.0",
    "prettier": "^2.2.1",
    "ts-loader": "^6.2.1",
    "typescript": "^4.0.3",
    "webpack": "^5.2.0",
    "webpack-cli": "^3.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.9",
    "@types/jest": "^26.0.15",
    "@types/node": "^13.1.2",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.1.4",
    "esdoc": "^1.1.0",
    "esdoc-node": "^1.0.3",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsdoc": "^20.0.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.8",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.4",
    "ts-jest": "^26.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**.ts": [
      "npx prettier --write",
      "eslint --cache ./lib/ --fix"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "esdoc": {
    "source": "./lib",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-standard-plugin",
        "option": {
          "lint": {
            "enable": true
          },
          "coverage": {
            "enable": true
          }
        }
      },
      {
        "name": "esdoc-node"
      }
    ]
  }
}
