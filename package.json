{
  "name": "@mozillasecurity/octo",
  "version": "3.0.0-next.22",
  "description": "A unified shared library which aids in building fuzzers for browsers or as complement for an existing fuzzing framework.",
  "keywords": [
    "fuzzing",
    "browser",
    "firefox",
    "random",
    "javascript",
    "node",
    "library"
  ],
  "homepage": "https://github.com/mozillasecurity/octo",
  "bugs": {
    "url": "https://github.com/mozillasecurity/octo/issues",
    "email": "cdiehl@mozilla.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:MozillaSecurity/octo.git"
  },
  "license": "MPL-2.0",
  "author": "Christoph Diehl <cdiehl@mozilla.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "coverage": "cross-env NODE_ENV=test jest --silent --coverage --collectCoverageFrom=lib/**/*.ts",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls",
    "docs": "typedoc ./lib",
    "lint": "cross-env NODE_ENV=test eslint ./lib --ext ts",
    "lint:fix": "cross-env NODE_ENV=test eslint ./lib --ext ts --fix",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "jest --silent"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        0
      ]
    }
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.{js,ts}": "eslint --cache --fix"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jsdoc"
    ],
    "printWidth": 100,
    "semi": false
  },
  "release": {
    "branches": [
      {
        "name": "master"
      },
      {
        "name": "v3",
        "channel": "next",
        "prerelease": "next"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "dependencies": {
    "@types/cssesc": "^3.0.0",
    "@types/html-entities": "^1.3.3",
    "@types/jsesc": "^3.0.1",
    "@types/mersenne-twister": "^1.1.2",
    "cssesc": "^3.0.0",
    "html-entities": "^2.3.3",
    "jsesc": "^3.0.2",
    "mersenne-twister": "^1.1.0",
    "ts-loader": "^9.3.0",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.1",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "husky": "^7.0.4",
    "jest": "^28.0.3",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "prettier-plugin-jsdoc": "^0.3.38",
    "semantic-release": "^19.0.2",
    "sort-package-json": "^1.57.0",
    "ts-jest": "^28.0.1",
    "typedoc": "^0.22.15"
  }
}
