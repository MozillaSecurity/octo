{
  "name": "@mozillasecurity/octo",
  "version": "3.0.0-next.36",
  "description": "A unified shared library which aids in building fuzzers for browsers or as complement for an existing fuzzing framework.",
  "keywords": [
    "fuzzing",
    "browser",
    "firefox",
    "random",
    "javascript",
    "node",
    "library"
  ],
  "homepage": "https://github.com/mozillasecurity/octo",
  "bugs": {
    "url": "https://github.com/mozillasecurity/octo/issues",
    "email": "cdiehl@mozilla.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:MozillaSecurity/octo.git"
  },
  "license": "MPL-2.0",
  "author": "Christoph Diehl <cdiehl@mozilla.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "coverage": "cross-env NODE_ENV=test jest --silent --coverage --collectCoverageFrom=lib/**/*.ts",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls",
    "docs": "typedoc ./lib",
    "lint": "cross-env NODE_ENV=test eslint ./lib --ext ts",
    "lint:fix": "cross-env NODE_ENV=test eslint ./lib --ext ts --fix",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "jest --silent"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        0
      ]
    }
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.{js,ts,tsx}|!(*package-lock).js": "eslint --cache --fix"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false
  },
  "release": {
    "branches": [
      {
        "name": "master"
      },
      {
        "name": "v3",
        "channel": "next",
        "prerelease": "next"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "restoreMocks": true,
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/cssesc": "^3.0.2",
    "@types/jsesc": "^3.0.3",
    "@types/mersenne-twister": "^1.1.7",
    "cssesc": "^3.0.0",
    "html-entities": "^2.4.0",
    "jsesc": "^3.0.2",
    "mersenne-twister": "^1.1.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-jsdoc": "^48.0.5",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-jsdoc": "^1.3.0",
    "semantic-release": "^23.0.0",
    "sort-package-json": "^2.7.0",
    "ts-jest": "^29.1.2",
    "typedoc": "^0.25.7"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
